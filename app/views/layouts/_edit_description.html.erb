<div class="modal" id="edit-description-modal">
  <div class="modal-background"></div>
  <div class="modal-content">

    <div class="box">
      <h1>Add or edit your description</h1>
      <br />
      <%= form_with url: users_update_description_path, html: { method: :patch } do |form| %>
        <div class="field">
          <div class="control">
            <%= form.text_field :description, class:"input", value:current_user.description %>
          </div>
        </div>

        <br/>
        <div class="is-flex is-justify-content-flex-end">
          <%= form.submit 'Save', class:"button is-primary" %>
        </div>
      <% end %>
    </div>

  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>