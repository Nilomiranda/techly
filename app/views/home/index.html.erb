<%= render 'layouts/partials/navigation' %>
<%= render 'layouts/edit_description' %>

<div class="columns p-6">
  <div class="column ">
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image" class="is-rounded">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4">@<%= current_user.nickname %></p>
            <p class="subtitle is-6">Tweets: <%= @logged_user_tweets_count %></p>
          </div>
        </div>

        <div class="content">
          <% if current_user.description %>
            <p><%= current_user.description %><span><a class="modal-btn" data-modal="edit-description-modal"><%= fa_icon "pencil", class:"ml-2 mr-1" %> Edit</a></span></p>
          <% else %>
            <br/>
            <button type="button" class="modal-btn button is-info is-light is-small" data-modal="edit-description-modal">Edit your description</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="column is-half">
    <%= render "tweets/components/create_tweet" %>
    <br/><br/><br/>
    <%= render "tweets/components/list" %>
  </div>

  <div class="column">
    <h1>Highlights</h1>
  </div>
</div>